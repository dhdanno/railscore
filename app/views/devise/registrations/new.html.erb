<div class="row">
  <div class="span6">

    <% if devise_error_messages! != "" %>
      <div class="alert warning signup">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= devise_error_messages! %>
      </div>  
    <% end %>

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well"}) do |f| %>

        <fieldset>
          <legend>Sign Up</legend>
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :profile_name %>
            <%= f.input :email %>
            <%= f.input :password %>
            <%= f.input :password_confirmation %>
            <div><%= f.button :submit, "Sign Up" %></div>
        </fieldset>

    <% end %>
  <%= render "devise/shared/links" %>
  </div>

  <div class="span6">
    <h3>Signing up is quick and simple</h3>
  </div>

</div>